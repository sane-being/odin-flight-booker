<h3>Select flight to proceed:</h3>

<%= form_with url: flights_path, method: :get do |form|%>

  <% @flights.each do |flight| %>
    <div>
      <%= render flight %>
      <%#= link_to "Select this flight", flight %>
      <%= form.radio_button :flight_id, flight.id %>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :passenger_count, value: @passenger_count %>
  </div>

  <div>
    <%= form.submit "Next" %>
  </div>

<% end %>