<p style="color: green"><%= notice %></p>

<% content_for :title, "Flights" %>

<h1>Search flights:</h1>

<div>
  <%= render "search_flights" %>
</div>

<div id="flights">
  <% if @flights.nil? %>
    <p>Search for flights</p>
  <% elsif @flights.empty? %>
    <p>No flights found for your destination on given date!</p>
  <% else %>
    <% @flights.each do |flight| %>
      <%= render flight %>
      <p>
        <%= link_to "Show this flight", flight %>
      </p>
    <% end %>
  <% end %>
</div>

