<%= form_with url: flights_path, method: :get do |form| %>
  <div>
    <%= form.label :departure_airport_id, "From", style: "display: block" %>
    <%= form.collection_select :departure_airport_id, Airport.order(:airport_code), :id, :airport_code, required: true %>
  </div>

  <div>
    <%= form.label :arrival_airport_id, "To", style: "display: block" %>
    <%= form.collection_select :arrival_airport_id, Airport.order(:airport_code), :id, :airport_code , required: true%>
  </div>

  <div>
    <%= form.label :departure_datetime, "Departs", style: "display: block" %>
    <%= form.date_field :departure_datetime, required: true %>
  </div>

  <%= form.submit "Search" %>
<% end %>